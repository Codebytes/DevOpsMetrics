{
  "manifestVersion": 1,
  "id": "high-performing-devops-metrics",
  "publisher": "SamSmithNZ",
  "name": "High performing DevOps metrics",
  "version": "0.2.0",
  "description": "Widgets to measure high performing DevOps Metrics as identifed by DORA and Accelerate, such as deployment frequency, lead time for changes, time to restore service and change failure rate",
  "tags": [
    "DevOps Metrics",
    "Deployment frequency",
    "Lead time for changes",
    "Time to restore services",
    "Change failure rate"
  ],
  "repository": {
    "type": "git",
    "uri": "https://github.com/samsmithnz/githubmetrics"
  },
  "categories": [ "Azure Repos", "Azure Pipelines" ],
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services.Cloud"
    }
  ],
  "icons": {
    "default": "img/logo.png"
  },
  "contributions": [
    {
      "id": "HelloWorldWidget",
      "type": "ms.vss-dashboards-web.widget",
      "targets": [
        "ms.vss-dashboards-web.widget-catalog"
      ],
      "properties": {
        "name": "Hello World Widget",
        "description": "My first widget",
        "catalogIconUrl": "img/CatalogIcon.png",
        "uri": "hello-world.html",
        "supportedSizes": [
          {
            "rowSpan": 1,
            "columnSpan": 2
          }
        ],
        "supportedScopes": [ "project_team" ]
      }
    }
  ],
  "scopes": [
    "vso.build",
    "vso.code",
    "vso.release"
  ],
  "screenshots": [
    {
      "path": "screenshots/DeploymentFrequencyDemo.png"
    },
    {
      "path": "screenshots/LeadTimeForChanges.png"
    },
    {
      "path": "screenshots/TimeToRestoreService.png"
    },
    {
      "path": "screenshots/ChangeFailureRate.png"
    }
  ],
  "files": [
    {
      "path": "index.html",
      "addressable": true
    },
    {
      "path": "overview.md",
      "addressable": true
    },
    {
      "path": "scripts",
      "addressable": true
    },
    {
      "path": "img",
      "addressable": true
    },
    {
      "path": "screenshots",
      "addressable": true
    }
  ]
}